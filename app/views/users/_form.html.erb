<%= form_for @user do |f| %>
	<% if @user.errors.any? %> 
		<div id="error_explanation">
	    <h2>Infelizmente não foi possível completara ação pois o 					 formulário possui os seguintes erros:</h2>
	    <ul>
				<% @user.errors.full_messages.each do |message|%> 
					<li><%= message %> </li>
				<% end %> 
			</ul>
		</div> 
	<% end %>
			
	<p>
		<%= f.label :full_name %> <br />
		<%= f.text_field :full_name %> 
	</p>
	
	<p>
		<%= f.label :location %> <br />
		<%= f.text_field :location %>
	</p> 
	<p>
		<%= f.label :email %> <br />
		<%= f.text_field :email %> 
	</p>
	<p>
		<%= f.label :password %> <br />
		<%= f.password_field :password %>
	</p>
	<p>
		<%= f.label :password_confirmation %> <br />
		<%= f.password_field :password_confirmation %>
	</p> 
	<p>
		<%= f.label :bio %> <br />
		<%= f.text_area :bio %> 
	</p>
	<p>
	<%= f.submit %>
</p>
<% end %>